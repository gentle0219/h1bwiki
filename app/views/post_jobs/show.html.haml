.row.post-main-page
	=render "layouts/nav-link-secondary"
	.row.post-jobs-show-box
		.row
			- model_class = PostJob
			.page-header
				%h1=t '.title', :default => model_class.model_name.human
		.row
			.span2
				%strong Job Title
			.span6
				= @post_job.job_title
		.row
			.span2
				%strong Type
			.span6
				= @post_job.get_jobtype
		.row
			.span2
				%strong Description
			.span6
				= @post_job.job_description
		.row
			.span2
				%strong Skills Required
			.span6
				= @post_job.skills[0].skill_name
		.row
			.span8
				.form-actions
					= link_to t('.back', :default => t("helpers.links.back")), post_jobs_path, :class => 'btn'
					= link_to t('.edit', :default => t("helpers.links.edit")), edit_post_job_path(@post_job), :class => 'btn'
					= link_to t('.destroy', :default => t("helpers.links.destroy")), post_job_path(@post_job), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
