- model_class = JobseekerMentor
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @jobseeker_mentor.user_id
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @jobseeker_mentor.title
%p
  %strong= model_class.human_attribute_name(:support) + ':'
  %br
  = @jobseeker_mentor.support
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @jobseeker_mentor.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), jobseeker_mentors_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_jobseeker_mentor_path(@jobseeker_mentor), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), jobseeker_mentor_path(@jobseeker_mentor), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
