									.row
										.span12.search-result-item
											.row.title-row
												.span8
													%p.item-title= search_emp_job.job_title
												.span4
													%p.created-date
														Date Posted:
														=l search_emp_job.created_at, :format =>"%Y-%m-%d %H:%M"
											.row.compnay-row
												.span12.company-name
													%p.item-company-name 
														- user = User.find_by_id(search_emp_job.user_id)
														Company Name( #{user.company_name} )-Location( #{user.city} )
											.row
												.span8.skill-tags
													%p.skill-tags 
