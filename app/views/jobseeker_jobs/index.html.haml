- model_class = JobseekerJob
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:job_title)
      %th= model_class.human_attribute_name(:transfer)
      %th= model_class.human_attribute_name(:status)
      %th= model_class.human_attribute_name(:job_description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @jobseeker_jobs.each do |jobseeker_job|
      %tr
        %td= link_to jobseeker_job.id, jobseeker_job_path(jobseeker_job)
        %td= jobseeker_job.user_id
        %td= jobseeker_job.job_title
        %td= jobseeker_job.transfer
        %td= jobseeker_job.status
        %td= jobseeker_job.job_description
        %td=l jobseeker_job.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_jobseeker_job_path(jobseeker_job), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), jobseeker_job_path(jobseeker_job), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_jobseeker_job_path, :class => 'btn btn-primary'
