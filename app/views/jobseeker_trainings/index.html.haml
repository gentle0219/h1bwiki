- model_class = JobseekerTraining
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:job_title)
      %th= model_class.human_attribute_name(:status)
      %th= model_class.human_attribute_name(:transfer)
      %th= model_class.human_attribute_name(:technology)
      %th= model_class.human_attribute_name(:instruction_mod)
      %th= model_class.human_attribute_name(:accomodation)
      %th= model_class.human_attribute_name(:job_description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @jobseeker_trainings.each do |jobseeker_training|
      %tr
        %td= link_to jobseeker_training.id, jobseeker_training_path(jobseeker_training)
        %td= jobseeker_training.user_id
        %td= jobseeker_training.job_title
        %td= jobseeker_training.status
        %td= jobseeker_training.transfer
        %td= jobseeker_training.technology
        %td= jobseeker_training.instruction_mod
        %td= jobseeker_training.accomodation
        %td= jobseeker_training.job_description
        %td=l jobseeker_training.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_jobseeker_training_path(jobseeker_training), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), jobseeker_training_path(jobseeker_training), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_jobseeker_training_path, :class => 'btn btn-primary'
