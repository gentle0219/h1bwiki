.navbar.navbar-fixed-top
	.navbar-inner
		.container{:style => "margin-top: 0px;"}
			%a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar			
			= link_to image_tag("logo.png"), "/", :class=>"brand"
			.nav-collapse				
				%ul.nav.nav-tabs									
					%li
						=link_to( "Search", search_home_path, :method => :get )
					%li
						=link_to( "Post", user_signed_in? ? (employer? ? posts_view_path : jobseeker_posts_path ) : posts_view_path )
					%li{:style => "width:150px"}
						= link_to( messagebox_inbox_path ) do
							Messages
							- if session["unread_message_count"].present? and session["unread_message_count"] > 0
								%span.unread-count= session["unread_message_count"]
					%li
						%a{:href=>"#"} About
					%li{:style=>"width:230px;"}
						.btn-group
							- if user_signed_in?
								= link_to "My Account", edit_user_registration_path(current_user), :class=>"btn btn-first"
								= link_to "Sign Out", destroy_user_session_path, :method => :delete, :class=>"btn btn-second"
							- else
								= link_to "LOGIN", new_user_session_path, :class=>"btn btn-first"
								= link_to "REGISTER", signup_path, :class=>"btn btn-second"
					
								
