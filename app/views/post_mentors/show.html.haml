.row.post-main-page
	=render "layouts/nav-link-secondary"
	.row.first-row.post-mentor-page
		.span12.edit-box
			.page-header
				%p.page-title Post a Mentor Assistance
			.row
				.span2
					%strong Title
				.span5
					= @post_mentor.job_title
			.row
				.span2
					%strong Skills Required
				.span5
					= @post_mentor.skills[0].skill_name
			.row
				.span2
					%strong Interview Support
				.span5
					= @post_mentor.job_interview == '1' ? 'Yes' : 'No'
			.row
				.span2
					%strong Description
				.span5
					= @post_mentor.job_description
	.row.last-row
		.span11
			.form-actions
				= link_to t('.back', :default => t("helpers.links.back")), post_mentors_path, :class => 'btn'
				= link_to t('.edit', :default => t("helpers.links.edit")), edit_post_mentor_path(@post_mentor), :class => 'btn'
				= link_to t('.destroy', :default => t("helpers.links.destroy")), post_mentor_path(@post_mentor), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
