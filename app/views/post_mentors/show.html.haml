.container-fluid
	.row.post-main-page
		.row
			.span10.post-jobs-show-box
				.row
					.span10
						%h1= @post_mentor.job_title
				.row
					- user = User.find_by_id(@post_mentor.user_id)
					%p.company-name 
						#{user.company_name.nil? ? user.user_name : user.company_name } -  #{user.city} ,  #{user.address1}
				.row
					.span3
						%strong 
							Skills: 
					.span8
						-@post_mentor.skill_lists.each do |skill_name|
							%a.h1bwiki-skill{:href=>"#"}=skill_name.name					
				.row
					.span3
						%strong 
							Interview support:
					.span8
						%span=@post_mentor.job_interview == '1' ? 'Yes' : 'No'
				.row
					.span3
						%strong 
							Description: 
					.span8
						%label= @post_mentor.job_description			
				.row.last-row
					.span2.offset3
						%input.m-btn.blue{:type=>"button", :value=>"Contact"}
					.span2
						%input.m-btn.blue{:type=>"button", :value=>"Forward"}					
					.span2
						%input.m-btn.blue{:type=>"button", :value=>"Close"}
			
:javascript 
	$('ul.nav-tabs li').eq(1).addClass('isCurrent');
